    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div align="Right" class="Switz_signup">
            <img src="/images/Group 19.png" id="logo" width="20%"  >
            <form>
                <!-- <input type="text" autocomplete="off" name="Username" id="Username" placeholder="Username" required ><br> -->
                <input type="text" autocomplete="off" name="name" id="name" placeholder="Name" required><br>
                <input type="email" autocomplete="off" name="Email" id="Email" placeholder="Email" required><br>
                
                
                <input type="password" autocomplete="off" name="Password" id="Password" placeholder="Password" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,})" title="Must contain at least one number,one uppercase and one lowercase,and atleast 8 characters"required> <br>

                <!-- <input type="password" autocomplete="off" name="npass" id="npass" placeholder="Confirm Password" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,})" title="Must contain at least one number,one uppercase and one lowercase,and atleast 8 characters" required=""><br> -->
                
                <input type="text" autocomplete="off" name="city" id="city" placeholder="City" required >
                
                <input type="submit" id="Signup_button" formtarget="_self" value="Sign up"  onclick="signup()">
            </form>        
        </div> 
        <div align = "left">
            <img src="/images/Sign up-cuate.png" height="40%" width="40%" id=signupimg>
        </div>
    </div>
    <script src="/javascript/signup.js">

    </script>
</body>
</html>